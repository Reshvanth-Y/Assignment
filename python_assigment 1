



Question 2
first_number=int(input("Enter your first number:"))
second_number=int(input("Enter your second number:"))

operation=str(input("Enter the operation required:"))

if operation=="Addition":
    print(first_number+second_number)
elif operation=="Subraction":
    print(first_number-second_number)
elif operation=="Multiplication":
    print(first_number*second_number)
elif operation=="Division":
    print(first_number/second_number)
elif operation=="reminder":
    print(first_number%second_number)
elif operation=="quotient":
    print((first_number//second_number))
else:
    print("INVAILD OPERATION ENTERED")

#Question 3
distance=float(input("Enter the distance"))
units=str(input("Enter the units (Kilometer/Miles):"))

if units=="Kilometer":
    print("Distance in miles is:")
    print(distance*0.621371)
elif units=="Miles":
    print("Distance in Kilometers is:")
    print(distance/0.621371)
else:
    print("INVALID UNIT")

#Question 4
temperature=float(input("Enter the temperature:"))
units=str(input("Enter the units(fahrenhiet/Celsius):"))

if units=="fahrenhiet":
    print("the temperature in Celsius is:")
    print((temperature-32)*(5/9))
if units=="Celsius":
    print("temperature in fahrenhite is:")
    print((temperature*(9/5))+32)
else:
    print("INVAILD UNIT")

#Question 5
number=float(input("Enter the number"))
operation=str(input("Enter the operation:"))

if operation=="Square root":
    print("Square root of the number is:")
    print(number**(1/2))
elif operation=="cube root":
    print("Cube root of the number is:")
    print(number**(1/3))
else:
    print("INVALID OPERATION")

#Question 6
first_number=int(input("Enter your first number:"))
second_number=int(input("Enter your second number"))
third_number=int(input("Enter your third numeber:"))

if (first_number==second_number) and (first_number==third_number) and (second_number==third_number):
    print("all numbers are equal")
elif (first_number>=second_number) and (first_number>=third_number):
    print("The first nummber is the largest")
elif (second_number>=first_number) and (second_number>=third_number):
    print("The second number is the largest")
elif (third_number>=first_number) and (third_number>=second_number):
    print("The third number is the largest")
else:
    print("IMPOSSIBLE")

#Question 7

#(GENERAL NOTATION OF A QUADRATIC EQUATION===> ax^2 + bx + c=0)
a=float(input("Enter the value of coefficent of x^2:"))
b=float(input("Enter the value of coefficent of x:"))
c=float(input("Enter the value of c:"))

D= ((b**2)-(4*a*c))**(1/2)

root_1= ((-b)+(D))/2*a
root_2= ((-b)-(D))/2*a 
print("Roots of the equation is:")
print(f"First root is:{root_1}\nsecond root is:{root_2}")


          

























